<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'metros', :media => 'screen' %>
<% end %>

<%= render 'breadcrumb',
           :title       => metro.full_name,
           :items       => [metro],
           :description => metro.description %>

<div id="main-content">
  <div class="container">
    <div class="nh-tiles row">
      <% areas.in_groups_of(3, false).each do |group| %>
        <div class="row">
          <% group.each do |area| %>
            <%= render 'areas/listing', :metro => metro, :area => area %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
