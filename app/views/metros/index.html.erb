<% content_for :stylesheet do %>
  <%= stylesheet_link_tag 'metros', :media => 'screen' %>
<% end %>

<div id="breadcrumb">
  <div class="container wide">
    <ul>
      <li><%= link_to 'Apartments', '/apartments' %></li>
      <li><%= link_to 'Find an Apartment', metros_path %></li>
    </ul>

    <h1>Find An Apartment</h1>
  </div>
</div>


<div id="main-content">
  <div class="container">
    <div class="nh-tiles row">
      <% metros.in_groups_of(3, false).each do |group| %>
        <div class="row">
          <% group.each do |metro| %>
            <div class="nh-tile">
              <% link_to metro_path(metro), :class => 'nh-listing-image' do %>
                <h2 class="nh-tile-title"><span><%= metro %></span></h2>

                <%= image_tag metro.listing_image.url, :width => 300, :height => 234 %>
              <% end %>

              <div class="nh-tile-content">
                <p class="nh-tile-community-count">
                  <%= pluralize(rand(4) + 1, 'Apartment Community') %>
                </p>

                <p class="nh-tile-description">
                  Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna uia
                </p>

                <% metro.areas.if_present? do |areas| %>
                  <ul class="nh-arrow-list">
                    <% areas.each do |area| %>
                      <li><%= link_to "#{area} (#{rand(35) + 1})", area_path(metro, area) %></li>
                    <% end %>
                  </ul>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="nh-states">
      <% 2.times do %>
        <div class="row">
          <% 4.times do %>
            <div class="nh-state">
              <h3 class="nh-state-title">Washington, DC</h3>

              <ul class="nh-arrow-list">
                <li><%= link_to 'Noma / Gallaudet (4)', '#' %></li>
                <li><%= link_to 'Southeast (3)', '#' %></li>
                <li><%= link_to 'Cleveland Park (2)', '#' %></li>
                <li><%= link_to 'Foggy Bottom (2)', '#' %></li>
                <li><%= link_to 'U Street (2)', '#' %></li>
                <li><%= link_to 'Navy Yard (2)', '#' %></li>
                <li><%= link_to 'Petworth (2)', '#' %></li>
                <li><%= link_to 'Carver / Langston (1)', '#' %></li>
              </ul>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
