<% content_for :javascript do %>
  <%= double_click_select_a_neighborhood_script('Apartment') %>
<% end %>

<% neighborhoods_assets %>

<%= render 'breadcrumb', :title => 'Find An Apartment' %>

<div id="main-content">
  <div class="container nh-container">
    <div class="nh-tiles row">
      <% metros.in_groups_of(3, false).each do |group| %>
        <div class="row">
          <% group.each do |metro| %>
            <%= render_neighborhoods_listing(metro) %>
          <% end %>
        </div>
      <% end %>
    </div>

    <%= render 'states', :states => states %>

    <div class="nh-search-all">
      <%= link_to 'Search All Communities', community_search_path, :class => 'button-refresh' %>
    </div>
  </div>
</div>
