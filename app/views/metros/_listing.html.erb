<div class="nh-tile">
  <%= link_to metro_path(metro), :class => 'nh-listing-image' do %>
    <div class="nh-tile-title">
      <h2><%= metro %></h2>
    </div>

    <%= image_tag metro.listing_image.url, :width => 300, :height => 234 %>
  <% end %>

  <div class="nh-tile-content">
    <p class="nh-tile-tagline">
      <%= pluralize(metro.apartment_communities_count, 'Apartment Community') %>
    </p>

    <%= if_present?(metro.areas) do |areas| %>
      <ul class="nh-arrow-list">
        <% areas.positioned.select(&:has_communities?).each do |area| %>
          <li><%= link_to area.name_with_count, area_path(metro, area) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
