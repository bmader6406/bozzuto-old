<div class="accordion">
  <% thing.hospital_memberships.each do |membership| %>
    <div class="tab-section">
      <label class="accordian-heading">
        <span><b><%= membership.apartment_community.short_title %></b></span>
        <span>- <%=  membership.show_distance %></span>
      </label>
      <div class="tab-content">
        <div class="content">
          <%= image_tag membership.apartment_community.listing_image.url, :alt => membership.apartment_community.short_title %>
          <span><%= membership.apartment_community.listing_text.html_safe %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>