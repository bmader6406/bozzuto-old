<% render_meta(@community, :features) %>

<div class="section page-title">
  <div class="content">
    <h2>Features &amp; Amenities</h2>
    <%= link_to @community.title, community_url(@community), :class => 'go-back' %>
  </div>
</div>

<div class="section">
  <div class="content">
    <% (1..3).each do |i| %>
      <% if @community.send("features_#{i}_title").present? %>
        <div class="row feature">
          <h2><%= @community.send("features_#{i}_title") %></h2>

          <%= raw(@community.send("features_#{i}_text")) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
