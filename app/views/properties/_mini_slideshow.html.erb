<% if slideshow.present? %>
  <div class="mini-slideshow">
    <ul class="slides">
      <% slideshow.slides.each_with_index do |slide, i| %>
        <li id="slide-<%= i %>" class="slide <%= 'current' if i == 0 %>">
          <%= image_tag slide.image.url %>
        </li>
      <% end %>
    </ul>
  </div>

  <p>
    <strong><%= slideshow.property.address %></strong><br />
    <%= raw(slideshow.property.subtitle) %>
  </p>
<% end %>
