<div id="sub-content" class="row">
  <%= render :partial => 'properties/recently_viewed' %>

  <div class="row">
    <% if property.is_a?(ApartmentCommunity) -%>
      <div id="why-is-bozzuto-the-leader" class="col">
        <h2>Why is Bozzuto the Leader?</h2>
        <%= snippet("Why is Bozzuto the Leader?") %>
      </div>
    <% else -%>
      <div id="why-buy-from-bozzuto" class="col">
        <h2>Why Buy from Bozzuto?</h2>
        <%= snippet("Why Buy from Bozzuto?") %>
      </div>
    <% end -%>
  </div>

  <% if !property.is_a?(HomeCommunity) && property.county.present? %>
    <div id="sub-listing">
      <% property.county.cities.in_groups_of(4, false).each do |city_groups| %>
        <ul class="row">
          <% city_groups.each do |city| %>
            <li>
              <%= link_to "#{city.name} #{property.is_a?(ApartmentCommunity) ? 'Apartments' : 'Homes'}", property %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
</div>
