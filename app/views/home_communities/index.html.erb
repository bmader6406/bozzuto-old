    <div id="content" class="col">
      <div class="header">
        <ul>
          <li class="current">
            <a href="#view-as-list" class="list">View as List</a>
          </li>
          <li>
            <a href="#view-as-map" class="map">View on Map</a>
          </li>
        </ul>

        <!--p>
          4 Home Communities in Maryland
        </p-->
      </div>
      
      <div id="view-as-list">
        <ul>
          <% @communities.each do |community| %>
            <li>
              <div class="photos">
                <p>
                  <%= image_tag community.listing_image.url %>
                </p>

                <!--p>
                  <img src="/images/homes-promo.jpg" alt="PROMO" />
                </p-->
              </div>
              
              <div class="content">
                <div>
                  <h2><%= community.title %></h2>

                  <% if community.listing_title.present? %>
                    <p class="intro">
                      <%= community.listing_title.try(:html_safe) %>
                    </p>
                  <% end %>

                  <%= community.listing_text %>

                  <p class="call-to-action">
                    <%= link_to 'Read More', home_community_path(community) %>
                  </p>
                </div>

                <div class="learn-more">
                  <h2>
                    <%= link_to 'Read More', home_community_path(community) %>
                  </h2>

                  <p>
                    <a href="#">Watch Video</a>
                  </p>

                  <p class="last">
                    <a href="#">SmartRent</a>
                  </p>
                </div>
              </div>
            </li>
          <% end %>
        </ul>

        <%= will_paginate(@communities) %>
      </div>
      
      <div id="view-as-map">
        
      </div>
    </div>
    
  </div>
</div>
