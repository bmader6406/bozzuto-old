<div id="footer" class="footer">
  <div class="container">
    <div class="col">
      <h4>About Us</h4>

      <ul>
        <% about_root_pages.each do |page| %>
          <li><%= link_to page.title, page_path(page.section, page) %></li>
        <% end %>
      </ul>
    </div>

    <div class="col">
      <h4>Our Services</h4>

      <ul>
        <li>
          <%= link_to 'Management', '/services/management' %>
        </li>
        <li>
          <%= link_to 'Homebuilding', '/services/homebuilding' %>
        </li>
        <li>
          <%= link_to 'Construction', '/services/construction' %>
        </li>
        <li>
          <%= link_to 'Development', '/services/development' %>
        </li>
        <li>
          <%= link_to 'Acquisitions', '/services/acquisitions' %>
        </li>
        <li>
          <%= link_to 'Land', '/services/land' %>
        </li>
      </ul>
    </div>

    <div class="col">
      <h4>We Work In</h4>

      <ul>
        <% states.each do |state| %>
          <li>
            <%= link_to state.name, state_apartment_search_path(state) %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col">
      <h4>Get in Touch</h4>

      <p>
        <%= phone_number("301.220.0100") %>
        <a href="mailto:feedback@bozzuto.com">feedback@bozzuto.com</a>
      </p>

      <p>
        7850 Walker Dr.<br />
        Suite 400<br />
        Greenbelt, MD 20770
      </p>
    </div>

    <div class="col wide">
      <h4>Connect with Us</h4>

      <form class="buzz-form" action="/bozzuto-buzz" method="GET">
        <label for="email">Enter your email address to stay connected.</label>
        <p class="fields">
          <input type="text" name="email" />
          <button type="submit">Submit</button>
        </p>
      </form>

      <ul>
        <li class="facebook">
          <a href="http://www.facebook.com/TheBozzutoGroup">Follow us on Facebook</a>
        </li>
        <li class="twitter">
          <a href="http://twitter.com/TheBozzutoGroup">Follow us on Twitter</a>
        </li>
      </ul>
    </div>
  </div>
</div>

<div id="copyright">
  <div class="container">
    <p>
      &copy; <%= Time.now.year %> Bozzuto
    </p>

    <p class="links">
      <a href="#">Privacy Policy</a>
      |
      <a href="#">Website Disclaimer</a>
      |
      <a href="#">Employee Login</a>
    </p>

    <%= link_to 'Equal Housing Opportunity', '/about-us/housing-for-all', :id => 'eho' %>
  </div>
</div>

