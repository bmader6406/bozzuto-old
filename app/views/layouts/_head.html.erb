  <%= include_javascripts :jquery, :lookup %>

  <link rel="icon" href="/favicon.png" type="image/png" />
  <link rel="shortcut icon" href="/favicon.ico" />

  <%= auto_discovery_link_tag :rss, section_news_posts_url('about', :format => :rss), :title => 'Latest Bozzuto News' %>
</head>
