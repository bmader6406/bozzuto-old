<%= render :partial => 'communities/special_nav' %>

<!DOCTYPE html>
<html lang="en" class="no-js">
<%= render 'layouts/head' %>
<body class="<% unless home? %>secondary<% end %> <%= yield :body_class %>">

  <%= render 'layouts/header' %>
  <%= render "#{@community.class.to_s.tableize}/breadcrumb" %>
  <%= render "#{@community.class.to_s.tableize}/masthead" %>

  <div id="main-content">
    <div class="container">
      <%= yield %>

      <%= render 'properties/sub_content', :property => @community %>
    </div>
  </div>

  <%= render 'layouts/footer' %>

  <%= yield :end_of_body %>
</body>
</html>
