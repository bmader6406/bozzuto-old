  <script type="text/javascript">
  var bzCookies = {
    init: function(){
      var form = document.getElementById("lasso-form");
      if (form)
        this.registerEvents(form,"submit");
      else
        console.log("no form")
    },

    registerEvents: function(el,eventType){
      var onEvent = "on" + eventType,
          input = document.getElementById("Emails_Primary"),
          cookieName = "lasso_email";

      if (el.addEventListener){
        el.addEventListener(eventType,function(e){
          bzCookies.setCookie(cookieName,input.value); 
        },false);
      } else if (el.attachEvent){
        el.attachEvent(onEvent,function(){
          bzCookies.setCookie(cookieName,input.value); 
        });
      } else {
        el[onEvent] = bzCookies.setCookie(cookieName,input.value); 
      }
    },

    setCookie: function(cookieName,cookieVal){ 
      document.cookie = cookieName + '=' + cookieVal + '; path=/';
    }
  }

  var prettyHeaders = function(){
    var divs = document.getElementsByTagName("div"),
    MAX_LENGTH = 30,
    getTitleContainer, titleContainer, h2, a;

    getTitleContainer = function(){
      var div, children, i, len, container; 
      
      for (var i=0,len=divs.length; i<len; i++){
        div = divs[i];

        if (div.getAttribute("class") == "section page-title"){
          children = div.childNodes;
          container = children[0].nodeName == "DIV" ?
            children[0] :
            children[1];
          break;
        }
      }
      return container;
    }

    titleContainer = getTitleContainer();
    
    if (titleContainer){
      h2 = titleContainer.getElementsByTagName("h2")[0];
      a = titleContainer.getElementsByTagName("a")[0];

      if (a.innerText.length + h2.innerText.length > MAX_LENGTH){
        if (h2.setAttribute)
          h2.setAttribute("class","wrap");
        else 
          h2.style.float = "none";
      }
    }
  };

  prettyHeaders();
  bzCookies.init();
  </script>

