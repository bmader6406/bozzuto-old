  <script type="text/javascript">
  var bzCookies = {
    init: function(){
      var form = document.getElementById("lasso-form");
      if (form)
        this.registerEvents(form,"submit");
      else
        console.log("no form")
    },

    registerEvents: function(el,eventType){
      var onEvent = "on" + eventType,
          input = document.getElementById("Emails_Primary"),
          cookieName = "lasso_email";

      if (el.addEventListener){
        el.addEventListener(eventType,function(e){
          bzCookies.setCookie(cookieName,input.value); 
        },false);
      } else if (el.attachEvent){
        el.attachEvent(onEvent,function(){
          bzCookies.setCookie(cookieName,input.value); 
        });
      } else {
        el[onEvent] = bzCookies.setCookie(cookieName,input.value); 
      }
    },

    setCookie: function(cookieName,cookieVal){ 
      document.cookie = cookieName + '=' + cookieVal + '; path=/';
    }
  }

  bzCookies.init();
  </script>

