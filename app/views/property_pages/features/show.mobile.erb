<% render_meta(@page) %>

<% content_for :javascript do %>
  <%= lasso_tracking_js(@community) %>
<% end %>

<div class="section page-title">
  <div class="content">
    <h2>Features &amp; Amenities</h2>
    <%= link_to @community.title, community_url(@community), :class => 'go-back' %>
  </div>
</div>

<div class="section">
  <div class="content">
    <% (1..3).each do |i| %>
      <% if @page.send("title_#{i}").present? %>
        <div class="row feature">
          <h2><%= @page.send("title_#{i}") %></h2>

          <%= raw(@page.send("text_#{i}")) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
