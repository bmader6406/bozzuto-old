<div class="nh-tile">
  <% link_to area_path(metro, area), :class => 'nh-listing-image' do %>
    <h2 class="nh-tile-title"><span><%= area %></span></h2>

    <%= image_tag area.listing_image.url, :width => 300, :height => 234 %>
  <% end %>

  <div class="nh-tile-content">
    <p class="nh-tile-community-count">
      <%= pluralize(area.apartment_communities_count, 'Apartment Community') %>
    </p>

    <% area.description.if_present? do |description| %>
      <p class="nh-tile-description">
        <%= description.html_safe %>
      </p>
    <% end %>

    <% area.neighborhoods.if_present? do |neighborhoods| %>
      <ul class="nh-arrow-list">
        <% neighborhoods.each do |neighborhood| %>
          <li><%= link_to neighborhood.name_with_count, neighborhood_path(metro, area, neighborhood) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
