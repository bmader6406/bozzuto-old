<div class="section page-title">
  <div class="content">
    <h2>Browse by County</h2>
    <%= link_to @state.name, state_path(@state), :class => 'go-back' %>
  </div>
</div>

<div class="section browse">
  <div class="content">
    <h3>Browse by County</h3>
    <ul class="browse city">
      <%- @state.counties.each do |county| -%>
        <% if county.apartment_communities.count > 0 %>
          <li>
            <% link_to county_path(county), :class => 'btn' do %>
              <span><%= county.name %></span> (<%= county.apartment_communities.count %>)
            <% end %>
          </li>
        <% end %>
      <%- end -%>
    </ul>
  </div>
</div>
