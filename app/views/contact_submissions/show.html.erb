<h2>Contact Bozzuto</h2>

<%= error_messages_for :submission %>

<% form_for @submission, :url => contact_path do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :topic, 'What would you like to ask us about?' %><br />
    <%= f.select :topic, ContactSubmission::TOPICS %>
  </p>

  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message, :rows => 20, :cols => 60 %>
  </p>
  
  <p>
    <button type="submit">Submit</button>
  </p>
<% end %>


