<% render_meta(@community, :media) %>

<% content_for :javascript do %>
  <%= lasso_tracking_js(@community) %>
<% end %>

<div class="section page-title">
  <div class="content">
    <h2>Photos</h2>
    <%= link_to @community.title, @community, :class => 'go-back' %>
  </div>
</div>

<div class="section mobile-photos">
  <div class="content">
    <%- @community.tours360s.each do |tour| -%>
      <div class="photo">
        <h3><%= tour.title %></h3>
        <%= link_to tour.url, target: "_blank" do %>
          <%= image_tag(tour.image.url(:mobile)) %>
        <% end %>
      </div>
    <%- end -%>
    <%- @community.photos.positioned.for_mobile.each do |photo| -%>
      <div class="photo">
        <h3><%= photo.title %></h3>
        <%= link_to image_tag(photo.image.url(:mobile), :alt => photo.title), photo.image.url %>
      </div>
    <%- end -%>
  </div>
</div>
