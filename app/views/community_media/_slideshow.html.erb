<% if @community.photos.any? %>
  <div id="slideshow">
    <div class="header">
      <ul class="slideshow-navigation">
        <li>
          <a class="prev" href="#">Previous</a>
        </li>
        <li>
          <a class="next" href="#">Next</a>
        </li>
      </ul>
    </div>

    <ul class="slides">
      <% slide_index = 1 %>

      <% @community.grouped_photos.each do |group, photos| %>
        <% photos.each do |photo| %>
          <li id="slideshow-slide-<%= slide_index %>" class="slide">
            <%= image_tag(photo.image.url) %>
            <div class="slideshow-caption">
              <p>
                <span class="slideshow-counter"></span>
                <%= photo.title %>
              </p>
            </div>
          </li>

          <% slide_index += 1 %>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
