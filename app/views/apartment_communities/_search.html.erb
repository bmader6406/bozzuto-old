            <li><a href="#"><strong>Annapolis</strong> <em>4</em></a></li>
            <li class="alt"><a href="#"><strong>Annapolis</strong> <em>4</em></a></li>
          </ul>
        </li>
        <li>
          <div class="header">
            <h3>Counties</h3>
          </div>
          <ul>
            <li><a href="#"><strong>Annapolis</strong> <em>4</em></a></li>
            <li><a href="#"><strong>Annapolis</strong> <em>4</em></a></li>
            <li><a href="#"><strong>Annapolis</strong> <em>4</em></a></li>
            <li class="alt"><a href="#"><strong>Annapolis</strong> <em>4</em></a></li>
          </ul>
        </li>
      </ul>
      <div class="results">
        <ul>
          <%= render :partial => 'detail', :collection => communities, :as => :community %>
        </ul>

