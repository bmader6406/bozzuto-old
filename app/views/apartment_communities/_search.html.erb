    <li class="<%= 'closed' unless state == @communities.keys.sort.first %>">
      <div class="header">
        <h2><%= state %></h2>
        <p><%= pluralize communities.count, 'Apartment Community' %></p>
      </div>
      <ul class="location-filters">
        <li>
          <div class="header">
            <h3>Cities</h3>
          </div>
          <ul>
            <li><a href="#"><strong>Annapolis</strong> <em>4</em></a></li>
