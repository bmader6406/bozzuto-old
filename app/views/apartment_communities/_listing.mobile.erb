<li>
  <div class="property">
    <%= link_to community, :class => 'info' do %>
      <span class="name"><%=h community.title %></span>

      <span class="address"><%= community.address %></span>

      <span class="floorplans"><%= list_of_floor_plan_group_names_for(community) %></span>

      <% apartment_community_price_range(community).if_present? do |range| %>
        <span class="price">Pricing from <%= range %></span>
      <% end %>
    <% end %>

    <%= community.mobile_phone_number.if_present? do |phone_number| %>
      <%= link_to_phone_number(format_phone_number(phone_number), phone_number, :class => 'tel') %>
    <% end %>
  </div>
</li>
