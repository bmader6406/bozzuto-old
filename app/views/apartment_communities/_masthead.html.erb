<div id="masthead">
  <div class="container">
    <div class="nav">
      <ul id="secondary-nav">
        <li class="<%= current_if 'show' %>">
          <%= link_to @community.title, @community %>
        </li>
        <li class="<%= current_if 'features' %>">
          <%= link_to 'Features & Amenities', features_apartment_community_path(@community) %>
        </li>
        <li class="<%= current_if 'media' %>">
          <%= link_to 'Photos & Videos', '#' %>
        </li>
        <li class="<%= current_if :controller => 'floor_plan_groups' %>">
          <%= link_to 'Floor Plans', apartment_community_floor_plan_groups_path(@community) %>
        </li>
        <li class="<%= current_if 'neighborhood' %>">
          <%= link_to 'Neighborhood', neighborhood_apartment_community_path(@community) %>
        </li>
        <li class="<%= current_if 'promotions' %>">
          <%= link_to 'Special Promotions', promotions_apartment_community_path(@community) %>
        </li>
        <li class="last <%= current_if 'contact' %>">
          <%= link_to 'Contact Info<br />&amp; Office Hours'.html_safe, contact_apartment_community_path(@community) %>
        </li>
      </ul>

      <ul id="remote-nav">
        <% if @community.website_url.present? %>
          <li>
            <%= link_to 'Visit Website', website_url(@community.website_url) %>
          </li>
        <% end %>
        <li class="last">
          <%= link_to 'Download E-Brochure', '#' %>
        </li>
      </ul>
    </div>

    <% if @community.slideshow.present? %>
      <div id="slideshow">
        <div class="header">
          <h1><%= @community.title %></h1>

          <ul class="slideshow-navigation">
            <li>
              <a class="prev" href="#">Previous</a>
            </li>
            <li>
              <a class="next" href="#">Next</a>
            </li>
          </ul>
        </div>

        <ul class="slides">
          <% @community.slideshow.slides.each do |slide| %>
            <li class="slide">
              <%= image_tag slide.image.url %>

              <div class="section">
                <%= slide.caption.html_safe %>

                <% if @community.video_url.present? %>
                  <p class="watch-video">
                    <%= link_to 'Watch Video', @community.video_url %>
                  </p>
                <% end %>
              </div>
            </li> 
          <% end %>
        </ul>
      </div>
    <% end %>

  </div>
</div>
