<% content_for :javascript do %>
  <%= double_click_community_features_amenities_script(community) %>
<% end %>

<%= if_present?(community.features_page) do |page| %>
  <!-- Features & Amenities -->
  <div class="cty-section">
    <div class="cty-section-header">
      <h3 class="hdr-narrow">Features &amp; Amenities</h3>
    </div>

    <div class="cty-section-content">
      <% (1..3).each do |i| %>
        <% if page.send("title_#{i}").present? %>
          <div class="cty-features-content">
            <h4 class="hdr-tertiary"><%= page.send("title_#{i}") %></h4>

            <%= page.send("text_#{i}").html_safe %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
