<!-- Floor Plans -->
<div class="cty-section">
  <div class="cty-section-header">
    <h3 class="hdr-narrow">Floor Plans</h3>
  </div>

  <div class="cty-section-content">
    <% community.floor_plans_by_group.each do |group, plans| %>
      <h4 class="cty-floor-plans-header">
        <%= floor_plan_group_pluralize(plans.count, group.name) %>
      </h4>

      <ul class="cty-floor-plans-list">
        <% plans.each do |plan| %>
          <li class="cty-floor-plan">
            <% if plan.actual_image.present? %>
              <%= image_tag plan.actual_thumb, :width => 115 %>
            <% end %>

            <h5><%= plan.name %></h5>

            <p>
              <% if plan.min_square_feet.present? %>
                <span class="cty-floor-plan-size"><%= square_feet(plan) %></span>
              <% end %>
              |
              <% if plan.min_rent.present? %>
                <span class="cty-floor-plan-price"><%= floor_plan_price(plan.min_rent) %></span>
              <% end %>
            </p>

            <% if plan.availability_url.present? %>
              <%= link_to 'Reserve', plan.availability_url, :class => 'btn btn-small btn-black' %>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
