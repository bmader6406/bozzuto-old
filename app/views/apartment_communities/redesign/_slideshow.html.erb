<% if community.id == 286 %>
  <%= render 'apartment_communities/redesign/slideshow_crosswinds', :community => community %>
<% else %>
  <% community.slideshow.if_present? do |slideshow| %>
    <div class="cty-slideshow">
      <h2 class="cty-slideshow-title"><%= community.short_name %></h2>

      <div class="cty-slideshow-shadow"></div>

      <div class="cty-slideshow-images">
        <% slideshow.slides.each_with_index do |slide, i| %>
          <%= image_tag slide.image.url, :style => ("display: none;" unless i == 0) %>
        <% end %>
      </div>

      <div class="cty-slideshow-track">
        <%= link_to '', '#', :class => 'cty-slideshow-arr cty-slideshow-prev' %>
        <%= link_to '', '#', :class => 'cty-slideshow-arr cty-slideshow-next' %>

        <div class="cty-slideshow-thumbs">
          <div class="cty-slideshow-thumbs-inner">
            <% slideshow.slides.each do |slide| %>
              <%= link_to image_tag(slide.image.url(:thumb)), '#' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
