<% content_for :body_class do %>search<% end %>

<div id="breadcrumb">
  <div class="container">
    <ul>
      <li><a href="#">Apartments</a></li>
      <li>Find an Apartment</li>
    </ul>
    <h1>Find an Apartment</h1>
    <!--img class="aside" src="/images/search-results-masthead.jpg" /-->
  </div>
</div>

<div id="main-content">
  <div class="container">
    <div class="row">
      <div id="sidebar" class="col">
        <h2>
          Search By
          <%= image_tag 'spinner.gif', :style => 'display: none', :id => 'spinner' %>
        </h2>
        <% form_for @search, :method => :get, :html => { :id => 'apartment-search-form' } do |f| %>
          <fieldset id="bedrooms" class="">
            <h3>Bedrooms</h3>
            <ul>
              <% ApartmentFloorPlanGroup.all.each do |fpg| %>
                <li>
                  <%= f.check_box :with_floor_plan_groups, {:name => 'search[with_floor_plan_groups][]', :id => fpg.name.tableize}, fpg.id.to_s, nil %>
                  <label for="<%= fpg.name.tableize %>"><%= fpg.name %></label>
                </li>
              <% end %>
            </ul>
          </fieldset>

          <fieldset id="price" class="">
            <h3>Price</h3>
            <ul>
              <li>
                <%= f.select :with_min_price, ['Choose Minimum...','250','500','750','1000','1250','1500','1750','2000','2500','3000','4000','5000','6000','7000','8000','9000','10000'] %>
              </li>
              <li>
                <%= f.select :with_max_price, ['Choose Maximum...','250','500','750','1000','1250','1500','1750','2000','2500','3000','4000','5000','6000','7000','8000','9000','10000'] %>
              </li>
            </ul>
          </fieldset>

          <fieldset id="special_promotion" class="">
            <h3>Special Promotions</h3>
            <ul>
              <li>
                <%= f.check_box :promotions_text_not_blank, :id => 'search_special_promotions' %>
                <%= f.label :special_promotions, 'Show only properties that have special promotions' %>
              </li>
            </ul>
          </fieldset>

          <fieldset id="features_amenities" class="">
            <h3>Most Searched Features &amp; Amenities</h3>
            <ul>              
              <% PropertyFeature.all(:conditions => {:show_on_search_page => true}).each do |feature| -%>
                <li>
                  <%= f.check_box :with_property_features, {:name => 'search[with_property_features][]', :id => feature.name.tableize}, feature.id.to_s, nil %>
                  <label for="<%= feature.name.tableize %>"><%= feature.name %></label>                  
                </li>
              <% end -%>
            </ul>
          </fieldset>

          <%= f.submit %>
        <% end %>
      </div>

      <%= render :partial => "apartment_communities/#{@partial_template}" %>

    </div>


    <div id="sub-content" class="row">
      <div class="row">
        <div id="renting-from-bozzuto" class="col">
          <h2>Renting From Bozzuto</h2>

          <p>
            <strong>Our goal is to provide you with an unparalleled living experience</strong> during your stay at a Bozzuto Community. We want you to relax and enjoy your new home while leaving the heavy lifting to us.
          </p>

          <p class="call-to-action">
            <a href="#">Read More</a>
          </p>
        </div>

        <div id="about-bozzuto" class="col">
          <h2>About Bozzuto Management Company</h2>

          <p>
            <strong>Recognized by the National Association of Home Builders</strong> in both 2009 and 200 as the nation&rsquo;s best residential management company, Bozzuto Management has assembled a portfolio of apartment communities and commercial properties in locations throughout the East Coast.
          </p>

          <p class="call-to-action">
            <a href="#">Learn More About Bozzuto Management</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>

  <script type="text/javascript">
   $('#apartment-search-form').attachSearchForm();
  </script>
<% end %>
