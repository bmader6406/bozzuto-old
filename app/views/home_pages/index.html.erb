<% if @home_page %>
  <div id="masthead">
    <% if @home_page.slides.any? %>
      <div id="masthead-fg">
        <div class="container">
          <div id="slideshow">
            <div class="header">
              <ul class="slideshow-navigation">
                <li>
                  <a class="prev" href="#">Previous</a>
                </li>
                <li>
                  <a class="next" href="#">Next</a>
                </li>
              </ul>
            </div>

            <ul class="slides">
              <% @home_page.slides.each do |slide| %>
                <li class="slide">
                  <% if slide.link_url.present? %>
                    <%= link_to image_tag(slide.image.url), slide.link_url %>
                  <% else %>
                    <%= image_tag slide.image.url %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div id="main-content">
    <div class="container">
      <div id="welcome">
        <%= @home_page.body.try(:html_safe) %>
      </div>
    </div>
    <section class="home-featured container nh-container">
      <p class="home-featured-title"><%# TODO: make admin editable #%>Where Are You Moving To?</p>
