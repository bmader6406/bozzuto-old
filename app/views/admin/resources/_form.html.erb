<%= form_for @item, :url  => options[:options], :html => { :multipart => true } do |form| %>
  <fieldset class="inputs">
    <ol>
      <%= build_form(@fields, form) %>
    </ol>
  </fieldset>
  <fieldset class="buttons">
    <ol>
      <li>
        <%= submit_tag options[:button], :class => 'commit' %>
        <%= link_to 'Cancel', :back %>
      </li>
    </ol>
  </fieldset>
<% end %>
