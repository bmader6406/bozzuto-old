<p>
  <%= link_to "&larr; Back to Home Community".html_safe, "/admin/home_communities/edit/#{@item.home_community.id}" %>
</p>

<br />

<%= form_for @item, :url  => options, :html => { :multipart => true } do |form| %>
  <fieldset class="inputs">
    <ol>
      <%= build_form(@fields, form) %>
    </ol>
  </fieldset>

  <fieldset class="buttons">
    <ol>
      <li>
        <%= submit_tag button , :class => 'commit' %>
        <%= link_to 'Cancel', :back %>
      </li>
    </ol>
  </fieldset>
<% end %>
