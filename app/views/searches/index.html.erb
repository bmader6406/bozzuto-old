<% content_for :body_class do %>search boss-search<% end %>

<div id="breadcrumb">
  <div class="container">
    <ul>
      <li><%= link_to 'Bozzuto', '/' %></li>
      <li>Search</li>
    </ul>
    <h1>Search Results for &ldquo;<%= query %>&rdquo;</h1>
  </div>
</div>

<div id="main-content">
  <div class="container">
    <div class="row">
      <div id="sidebar" class="col">
        &nbsp;
      </div>

      <div id="content" class="col">
        <% if results.any? -%>
          <div class="header">
            <p>
              Showing <%= search.first_result_num %>&ndash;<%= search.last_result_num %>
              of <%= number_with_delimiter(search.total_results) %>
              results
            </p>
          </div>

          <div class="results">
            <ul>
              <% results.each do |result| -%>
                <li>
                  <h4><%= link_to raw(result.title), result.url %></h4>

                  <p><%= raw(result.abstract) %></p>
                </li>
              <% end -%>
            </ul>

            <div class="boss-pagination">
              <p>
                <% (1..search.total_pages).to_a.each do |page| %>
                  <% if page == search.page %>
                    <span class="current"><%= page %></span>
                  <% else %>
                    <%= link_to page, search_path(:q => query, :page => page) %>
                  <% end %>
                <% end %>
              </p>
            </div>
          </div>
        <% else -%>
          <div class="results">
            <p>
              There were no results for the search term <strong><%= query %></strong>.
            </p>
          </div>
        <% end -%>
      </div>
    </div>
  </div>
</div>
