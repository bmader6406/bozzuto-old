<% render_meta(@page) if @page %>

<div class="section page-title">
  <div class="content">
    <h2>Thank You</h2>
    <%= link_to @community.title, community_url(@community), :class => 'go-back' %>
  </div>
</div>

<div class="section">
  <div class="content">
    <div id="thank-you-text">
      <% config = @community.contact_configuration %>

      <% if flash[:contact_form] == 'under_construction' &&
            config.present? &&
            config.upcoming_thank_you_text.present? &&
            config.upcoming_thank_you_text.length > 10 %>
        <%= raw(config.upcoming_thank_you_text) %>
      <% else %>
        <%= snippet('Apartments Thank You Text') %>
      <% end %>
    </div>

    <% if flash[:apartment_contact_email] %>
      <%= lead_2_lease_mediaplex_code(@community, flash[:apartment_contact_email]) %>
      <%= apartment_contact_mediaplex_code(@community, flash[:apartment_contact_email]) %>
    <% end %>
  </div>
</div>

