<% content_for :special_nav do %>
  <ul id="special-nav">
    <% if @community.home? %>
      <li>
        <a href="#">Send to friend</a>

        <div class="popup">
          <% form_tag [@community, :email_listing], :class => (flash[:send_to_friend_errors] ? 'errors' : nil) do %>
            <p>
              <label>
                <strong>Input your friend&rsquo;s email address</strong> to
                send <%= @community.short_name %> info
              </label>
            </p>

            <p class="fields">
              <%= text_field_tag :email %>
              <button type="submit">Send</button>
            </p>
          <% end %>
        </div>
      </li>
    <% end %>

    <% if @community.apartment? %>
      <li>
        <a href="#">Send this property listing</a>

        <div class="popup">
          <% form_tag [@community, :email_listing], :class => (flash[:send_to_friend_errors] ? 'errors' : nil) do %>
            <p>
              <label>
                <strong>
                  Enter your email address and we will send you the details and contact information for this property.
                </strong>
              </label>
            </p>

            <p class="checkbox">
              <%= check_box_tag :send_newsletter %>
              <%= label_tag :send_newsletter, "Sign me up for Bozzuto's e-newsletter" %>
            </p>

            <p class="fields">
              <%= text_field_tag :email %>
              <button type="submit">Send</button>
            </p>
          <% end %>
        </div>
      </li>
    <% end %>

    <li>
      <a href="#">Send to phone</a>

      <div class="popup">
        <% form_tag [@community, :sms_message], :class => (flash[:send_to_phone_errors] ? 'errors' : nil) do %>
          <% content_tag :label, :for => 'phone_number' do %>
            <strong>Input your phone number</strong> for <%= @community.short_name %> info. Std msg
            rates apply.
          <% end %>
          <p class="fields">
            <%= text_field_tag 'phone_number' %>
            <button type="submit">Send</button>
          </p>
        <% end %>
      </div>
    </li>
  </ul>
<% end %>
