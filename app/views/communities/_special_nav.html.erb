<% content_for :special_nav do %>
  <ul id="special-nav">
    <% if @community.home? %>
      <li>
        <a href="#">Send to friend</a>

        <div class="popup">
          <%= form_tag [@community, :email_listing], :class => (flash[:send_listing_errors] ? 'errors' : nil) do %>
            <p>
              <label>
                <strong>Input your friend&rsquo;s email address</strong> to
                send <%= @community.short_name %> info
              </label>
            </p>

            <p class="fields">
              <%= text_field_tag :email %>
              <button type="submit" class="fl-record-click" data-cat="ste01" data-prop="<%= @community.title %>">Send</button>
            </p>
          <% end %>
        </div>
      </li>
    <% end %>

    <% if @community.apartment? %>
      <li>
        <a href="#">Send this property listing</a>

        <div class="popup">
          <%= form_tag [@community, :email_listing], :class => (flash[:send_listing_errors] ? 'errors' : nil) do %>
            <p>
              <label>
                <strong>
                  Enter your email address and we will send you the details and contact information for this property.
                </strong>
              </label>
            </p>

            <p class="checkbox">
              <%= check_box_tag :newsletter %>
              <%= label_tag :newsletter, "Sign me up for Bozzuto's e-newsletter" %>
            </p>

            <p class="fields">
              <%= text_field_tag :email %>
              <button type="submit" class="fl-record-click" data-cat="ste01" data-prop="<%= @community.title %>">Send</button>
            </p>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
