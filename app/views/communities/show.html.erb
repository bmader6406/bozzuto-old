<% content_for :body_class do %>community<% end %>

<%= render :partial => 'breadcrumb' %>

<%= render :partial => 'masthead' %>

<div id="main-content">
  <div class="container">
    <div class="row">
      <div id="content" class="col">
        <div id="overview">
          <%= community_icons %>

          <%= @community.overview_text %>

          <p>
            <!-- TODO: go to features page -->
            <a href="#">Read More</a>
          </p>
        </div>

        <% if @community.promo_image? %>
          <div class="promo">
            <p>
              <%= link_to @community.promo_url, image_tag(@community.promo_image) %>
            </p>
          </div>
        <% end %>

        <% unless @community.floor_plan_groups.empty? %>
          <div id="apartments">
            <h2>Apartments</h2>

            <table>
              <tbody>
                <% @community.floor_plan_groups.each do |group| %>
                  <tr>
                    <td>
                      <%= link_to group.name, "#" %>
                    </td>
                    <td>
                      <%= pluralize(group.floor_plans.count, 'Floor Plan') %>
                    </td>
                    <td>
                      <% unless group.floor_plans.empty? %>
                        <%= square_feet(group.floor_plans.largest) %>
                      <% end %>
                    </td>
                    <td>
                      <% unless group.floor_plans.empty? %>
                        From <%= floor_plan_price(group.floor_plans.cheapest) %>
                      <% end %>
                    </td>
                    <td class="availability">
                      <%= link_to "Availability", "#" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>

        <div id="featured-floor-plans" class="row">
          <h2>Featured Floor Plans</h2>
          <ul>
            <li class="floor-plan">
              <h4>Studio</h4>
              <p>
                542 Sq Ft | $XXXX<br />
                <a href="#">Reserve</a>
              </p>
              <img src="/images/floor-plan-studio.png" />
            </li>

            <li class="floor-plan">
              <h4>1 Bedroom w/Den</h4>
              <p>
                830 Sq Ft | $XXXX<br />
                <a href="#">Reserve</a>
              </p>
              <img src="/images/floor-plan-1-br.png" />
            </li>

            <li class="floor-plan">
              <h4>2 Bedrooms</h4>
              <p>
                542 Sq Ft | $XXXX<br />
                <a href="#">Reserve</a>
              </p>
              <img src="/images/floor-plan-2-br.png" />
            </li>
          </ul>
        </div>
      </div>


      <div id="sidebar" class="col">
        <div id="community-info" class="article row">
          <ul class="nav row">
            <li><a href="#map">View Map</a></li>
            <li><a href="#walk-score">Walk Score&trade;</a></li>
            <li class="last"><a href="#local-info">Local News</a></li>
          </ul>

          <div id="map" class="section">
            <img src="/images/community-map.png" />
            <p class="call-to-action"><a href="#">Get Directions</a></p>
          </div>

          <div id="walk-score" class="section">
            <p>Walk score</p>
          </div>

          <div id="local-info" class="section">
            <p>Local info</p>
          </div>
        </div>


        <div id="nearby-communities">
          <h3>Nearby Apartment Communities</h3>
          <ul>
            <li><a href="#">220 Twentieth Street</a></li>
            <li><a href="#">Concord</a></li>
            <li><a href="#">Halstead Arlington</a></li>
            <li><a href="#">London/Normandy House</a></li>
            <li><a href="#">River House</a></li>
            <li><a href="#">The Palatine</a></li>
          </ul>
        </div>

        <div class="social-updates">
          <% if @community.facebook_url.present? %>
            <div class="facebook-update">
              <p class="message">
                <%= link_to "Become a fan on Facebook", @community.facebook_url %>
              </p>
            </div>
          <% end %>

          <% if @community.twitter_handle.present? %>
            <div class="twitter-update" <%= twitter_data_attr(@community.twitter_handle) %>></div>
          <% end %>

          <p class="sharethis">
            <a href="#">ShareThis</a>
          </p>
        </div>
      </div>
    </div>

    <%= render :partial => 'sub_content' %>
  </div>
</div>

<%= render :partial => 'special_nav' %>
