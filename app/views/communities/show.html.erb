<% content_for :body_class do %>community<% end %>

<div id="breadcrumb">
  <div class="container">
    <ul>
      <li><%= link_to "Apartments", "#" %></li>
      <li><%= link_to "Find an Apartment", "#" %></li>
      <li><%= link_to @community.city.state.name, "#" %></li>
      <li><%= link_to @community.city.name, "#" %></li>
      <li class="last"><%= @community.title %></li>
    </ul>
  </div>
</div>

<div id="masthead">
  <div class="container">
    <div class="nav">
      <ul id="secondary-nav" class="current-1">
        <li class="current"><%= link_to @community.title, @community %></li>
        <li><a href="features.html">Features &amp; Amenities</a></li>
        <li><a href="#">Videos &amp; Photos</a></li>
        <li><a href="#">Floor Plans</a></li>
        <li><a href="#">Additional Info</a></li>
        <li><a href="#">Special Promotions</a></li>
        <li class="last">
          <a href="#">Contact Info<br />&amp; Office Hours</a>
          <span class="phone-number">301-220-0100</span>
        </li>
      </ul>

      <ul id="remote-nav">
        <% if @community.website_url.present? %>
          <li><%= link_to "Visit Website", @community.website_url %></li>
        <% end %>
        <li class="last"><a href="#">Download E-Brochure</a></li>
      </ul>
    </div>

    <div id="slideshow">
      <div class="header">
        <h1><%= @community.title %></h1><a href="#" class="prev">‹</a><a href="#" class="next">›</a>
      </div>

      <div class="slide">
        <img src="/images/community-slide-1.jpg" />
        <div class="section">
          <p>
            <strong><%= @community.city %></strong>
            <%= @community.subtitle %>
          </p>

          <p class="watch-video">
            <a href="#">Watch Video</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="main-content">
  <div class="container">
    <div class="row">
      <div id="content" class="col">
        <div id="overview">
          <%= community_icons %>

          <%= @community.overview_text %>

          <p>
            <!-- TODO: go to features page -->
            <a href="#">Read More</a>
          </p>
        </div>

        <% if @community.promo_image? %>
          <div class="promo">
            <p><%= link_to @community.promo_url, image_tag(@community.promo_image) %></p>
          </div>
        <% end %>

        <% unless @community.floor_plan_groups.empty? %>
          <div id="apartments">
            <h2>Apartments</h2>

            <table>
              <tbody>
                <% @community.floor_plan_groups.each do |group| %>
                  <tr>
                    <td>
                      <%= link_to group.name, "#" %>
                    </td>
                    <td>
                      <%= pluralize(group.floor_plans.count, 'Floor Plan') %>
                    </td>
                    <td>
                      <% unless group.floor_plans.empty? %>
                        <%= square_feet(group.floor_plans.largest) %>
                      <% end %>
                    </td>
                    <td>
                      <% unless group.floor_plans.empty? %>
                        From <%= floor_plan_price(group.floor_plans.cheapest) %>
                      <% end %>
                    </td>
                    <td class="availability">
                      <%= link_to "Availability", "#" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>

        <div id="featured-floor-plans" class="row">
          <h2>Featured Floor Plans</h2>
          <ul>
            <li class="floor-plan">
              <h4>Studio</h4>
              <p>
                542 Sq Ft | $XXXX<br />
                <a href="#">Reserve</a>
              </p>
              <img src="/images/floor-plan-studio.png" />
            </li>

            <li class="floor-plan">
              <h4>1 Bedroom w/Den</h4>
              <p>
                830 Sq Ft | $XXXX<br />
