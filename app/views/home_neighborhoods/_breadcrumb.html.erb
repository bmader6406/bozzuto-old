<% description ||= '' %>

<div id="breadcrumb">
  <div class="container wide nh-masthead-subtext">
    <ul>
      <li><%= link_to 'New Homes', '/new-homes' %></li>
      <li><%= link_to_unless(request.path == home_neighborhoods_path, 'Find a New Home', home_neighborhoods_path) %></li>

      <% if defined?(items) %>
        <% items.each do |item| %>
          <li><%= item.to_s.html_safe %></li>
        <% end %>
      <% end %>
    </ul>

    <h1 class="bc-title"><%= title %></h1>

    <% if description.present? %>
      <p class="bc-description"><%= description.html_safe %></p>
    <% end %>

  </div>
</div>
