<div id="masthead">
  <div class="container">
    <div class="masthead-slideshow">
      <ul class="slides">
        <% slideshow.slides.each do |slide| %>
          <li>
            <div class="section">
              <%= raw(slide.body) %>
            </div>

            <% if slide.uses_image? %>
              <div class="figure">
                <%= link_to image_tag(slide.image.url), slide.image_link %>
              </div>
            <% elsif slide.uses_text? %>
              <div class="aside">
                <%= raw(slide.sidebar_text) %>
              </div>
            <% elsif slide.uses_featured_property? %>
              <div class="figure">
                <%= render :partial => 'properties/mini_slideshow', :locals => { :slideshow => slide.featured_property.mini_slideshow } %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>      
    </div>
  </div>
</div>
