<div id="masthead" class="<%= local_assigns[:custom_class_name] %>">
<div class="nh-apt-masthead">
  <div class="container">
  <div class="nh-apt-masthead-content">
    <% if slideshow.present? %>
      <div id="masthead-slideshow">
        <ul class="slides" <%= about_and_services_slideshow_attrs %>>
          <% slideshow.slides.each do |slide| %>
            <li class="slide">
              <div class="section nh-masthead-subtext">
                <%= raw(slide.body) %>
              </div>

              <% if slide.uses_image? && slide.image? %>

                <div class="figure">
                  <%= link_to image_tag(slide.image.url), slide.image_link %>
                </div>

              <% elsif slide.uses_text? %>

                <div class="aside">
                  <%= raw(slide.sidebar_text) %>
                </div>

              <% elsif slide.uses_mini_slideshow? %>

                <% mini = slide.mini_slideshow %>
                <div class="figure">
                  <% if mini.present? %>
                    <p>
                      <%= link_to image_tag(mini.slides.first.image.url), mini.link_url %>
                    </p>

                    <% if mini.subtitle.present? %>
                      <p><strong><%= mini.subtitle %></strong></p>
                    <% end %>
                  <% end %>
                </div>

              <% elsif slide.uses_quote? %>

                <div class="quote">
                  <blockquote>
                    <%= raw(slide.quote) %>

                    <cite>
                      <% if slide.quote_attribution.present? %>
                        <strong><%= slide.quote_attribution %></strong>
                      <% end %>

                      <% if slide.quote_job_title.present? %>
                        <br /><%= slide.quote_job_title %>
                      <% end %>

                      <% if slide.quote_company.present? %>
                        <br /><%= slide.quote_company %>
                      <% end %>
                    </cite>
                  </blockquote>
                </div>

              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  </div>
</div>
</div>
